@page
@model RazorPagesApp.Pages.Product.EditModel
@{
}

<div class="container">
	<form method="post">
		@* <input  asp-for="Products.Id" hidden/> *@
		<input hidden asp-for="Products.Id" />

		<div class="mb-3">
			<label class="form-label">Name</label>
			<input asp-for=Products.Name class="form-control" />
			<span asp-validation-for="Products.Name" class="text-danger"></span>

		</div>

		<div class="mb-3">
			<label class="form-label">Description</label>
			<input asp-for="Products.Description" class="form-control">
			<span class="text-danger" asp-validation-for="Products.Description"></span>

		</div>


		<button type="submit" class="btn btn-primary">Submit</button>
		<a asp-page="/Product/Index" class="btn btn-outline-secondary">Back To Index</a>


	</form>
</div>
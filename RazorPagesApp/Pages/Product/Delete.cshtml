@page
@model RazorPagesApp.Pages.Product.DeleteModel
@{
}

<div class="container">
	<form class="" method="post">
		<input hidden asp-for="Products.Id"/>

		<div class="mb-3">
			<label class="form-label">Name</label>
			<input asp-for=Products.Name class="form-control" />
			<span asp-validation-for="Products.Name" class="text-danger" disabled></span>
			

		</div>

		<div class="mb-3">
			<label class="form-label">Description</label>
			<input asp-for="Products.Description" class="form-control" disabled>
			<span asp-validation-for="Products.Description" class="text-danger"></span>
		

		</div>


		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-page="/Product/Index" class="btn btn-outline-secondary">Back To Index</a>


	</form>
</div>

@page
@model RazorPagesApp.Pages.Product.IndexModel

<div class="container">
	<partial name="_Notification" />
</div>

<div class="container"> 
	<div class="container">
		<a asp-page="Add" class="btn btn-primary">add</a>

	</div>



<table class="table table-bordered">
	<thead>
		<tr>
			<th>Product Id</th>
			<th>Product Name</th>
			<th>Description</th>
			<th>actions</th>
		</tr>

	</thead>
	<tbody>
		@foreach (var item in Model.Product_list)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Description</td>

				<td>
					<a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
					<a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				</td>

			</tr>

		}
		


	</tbody>
</table>
</div>